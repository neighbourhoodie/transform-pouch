{
  "name": "transform-pouch",
  "version": "1.1.5",
  "description": "Transform Pouch - a PouchDB plugin for transforming documents",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/nolanlawson/transform-pouch.git"
  },
  "keywords": [
    "pouch",
    "pouchdb",
    "plugin",
    "transform",
    "couch",
    "couchdb"
  ],
  "author": "Nolan Lawson <nolan@nolanlawson.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nolanlawson/transform-pouch/issues"
  },
  "scripts": {
    "test-node": "TEST_DB=testdb,http://localhost:5984/testdb nyc ./node_modules/mocha/bin/_mocha test/test.js",
    "test-browser": "./bin/test-browser.js",
    "lint": "standard --env mocha",
    "test": "standard --env mocha && ./bin/run-test.sh",
    "build": "mkdir -p dist && browserify index.js -o dist/pouchdb.transform-pouch.js && npm run min",
    "min": "browserify -p tinyify --no-flat index.js > dist/pouchdb.transform-pouch.min.js",
    "dev": "browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js",
    "coverage": "nyc npm test"
  },
  "dependencies": {
    "immediate": "~3.0.5",
    "inherits": "2.0.1",
    "lie": "3.0.4",
    "nyc": "^15.1.0",
    "pouchdb-extend": "0.1.2",
    "pouchdb-promise": "5.4.3",
    "pouchdb-wrappers": "4.1.0"
  },
  "devDependencies": {
    "bluebird": "^1.0.7",
    "browserify": "^17.0.0",
    "chai": "^4.3.3",
    "chai-as-promised": "^5.3.0",
    "http-server": "^0.12.3",
    "mocha": "^8.3.2",
    "phantomjs-prebuilt": "^2.1.7",
    "pouchdb-adapter-http": "^7.2.2",
    "pouchdb-adapter-memory": "^7.2.2",
    "pouchdb-core": "^7.2.2",
    "pouchdb-mapreduce": "^7.2.2",
    "pouchdb-replication": "^7.2.2",
    "request": "^2.36.0",
    "sauce-connect-launcher": "^1.3.2",
    "selenium-standalone": "^6.23.0",
    "standard": "^16.0.3",
    "tinyify": "^3.0.0",
    "watchify": "^3.1.0",
    "wd": "^1.14.0"
  },
  "files": [
    "dist",
    "index.js",
    "pouch-utils.js"
  ],
  "standard": {
    "globals": [
      "emit",
      "atob",
      "btoa"
    ]
  }
}
